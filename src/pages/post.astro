---
// async function recibePost() { <-- No es necesario escribir el async
// Astro tiene un Top Level Await, es decir, Astro puso el async
const response = await fetch("https://jsonplaceholder.typicode.com/posts")
// console.log(response) // aquí responde en un formato crudo, con las respuesta del servidor entre otros
const posts = await response.json() // -> aquí solo obtenemos el payload de la respuesta 
// console.log(data)
---

<h1>Publicaciones</h1>

{
    posts.map(post => (
        <div>
            <h5>{post.userId}</h5>
            <h3 class="title">{post.title}</h3>
            <p style="color: #333;">{post.body}</p>
        </div>
    ))
}

<style>
    .title {
        color: skyblue;
    }
</style>